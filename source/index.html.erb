<div class="banner" style= "background-image: url('/images/banner-breizh.jpg'), linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%)";>
    <div class="banner-content">
      <h1>Breizh'nB</h1>
      <p> Enjoy AirBnb but only Breizh </p>
      <a class="btn btn-primary btn-lg">Start now</a>
    </div>
</div>

<div class="container" id="home-flats">
  <h2 class="text-center">Recent houses</h2>
  <div class="row">
    <% data.houses.each do |owner, flat| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('/images/<%=flat.img%>');">
          <div class="card-category"><%= flat.city_name %></div>
          <div class="card-description">
            <h3><%= flat.name %></h3>
            <p><%= flat.description %></p>
          </div>
          <%= image_tag "/images/#{flat.avatar}", class: "card-user" %>
          <%= link_to "", "houses/#{owner}.html", class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


